/**index.wxss**/
.temperature {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65
}
/* padding的值加上weather与temperature的line-height，高度正好是760rpx */
.weather-wrapper {
  position: relative;
  padding-top: 174rpx; 
  padding-bottom: 250rpx;
}
/*;z-index: -1;放置在所有兄弟视图的后面  */
.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}